<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/keyboard_divide_size"
            android:background="@color/keyboard_dividers" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/keyboard_background"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/keyboard_number1"
                style="@style/KeyboardNumbers"
                android:text="1" />

            <TextView
                android:id="@+id/keyboard_number2"
                style="@style/KeyboardNumbers"
                android:text="2" />

            <TextView
                android:id="@+id/keyboard_number3"
                style="@style/KeyboardNumbers"
                android:text="3" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/keyboard_divide_size"
            android:background="@color/keyboard_dividers" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/keyboard_background"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/keyboard_number4"
                style="@style/KeyboardNumbers"
                android:text="4" />

            <TextView
                android:id="@+id/keyboard_number5"
                style="@style/KeyboardNumbers"
                android:text="5" />

            <TextView
                android:id="@+id/keyboard_number6"
                style="@style/KeyboardNumbers"
                android:text="6" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/keyboard_divide_size"
            android:background="@color/keyboard_dividers" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/keyboard_background"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/keyboard_number7"
                style="@style/KeyboardNumbers"
                android:text="7" />

            <TextView
                android:id="@+id/keyboard_number8"
                style="@style/KeyboardNumbers"
                android:text="8" />

            <TextView
                android:id="@+id/keyboard_number9"
                style="@style/KeyboardNumbers"
                android:text="9" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/keyboard_divide_size"
            android:background="@color/keyboard_dividers" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/keyboard_background"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/keyboard_dot"
                style="@style/KeyboardNumbers"
                android:text="."
                android:textStyle="bold" />

            <TextView
                android:id="@+id/keyboard_number0"
                style="@style/KeyboardNumbers"
                android:text="0" />

            <ImageView
                android:id="@+id/keyboard_backspace"
                style="@style/KeyboardNumbers"
                android:layout_margin="@dimen/keyboard_view_margin"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_backspace" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="@dimen/keyboard_divide_size"
        android:layout_height="0dp"
        android:background="@color/keyboard_dividers"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/_guideline_33"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="@dimen/keyboard_divide_size"
        android:layout_height="0dp"
        android:background="@color/keyboard_dividers"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/_guideline_66"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/_guideline_33"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".33" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/_guideline_66"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".66" />

</merge>